<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="horizontal"
    android:id="@+id/mainLayout"
    android:background="@color/photos"
    >

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navbar" />


    <RelativeLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/round_navbar"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:weightSum="3"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"

         >
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:id="@+id/selectAll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"

            android:layout_marginEnd="10dp"
            android:clickable="true"

            android:src="@drawable/ic_baseline_playlist_add_check_24"
            app:backgroundTint="#FFFFFF"

            app:elevation="0dp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"

            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:clickable="true"

            android:src="@drawable/ic_baseline_clear_24"
            app:backgroundTint="#FFFFFF" app:elevation="0dp"/>

        <TextView
            android:id="@+id/infomationText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="selected 0 images"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp"
            android:textSize="20dp">

        </TextView>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/selectNavbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_navbar"
        android:elevation="10dp"
        android:visibility="invisible"
        android:orientation="horizontal"

        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:id="@+id/deleteImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="30dp"
                android:clickable="true"
                app:elevation="0dp"
                android:src="@drawable/ic_baseline_delete_outline_24"
                app:backgroundTint="#FFFFFF"
               >

            </com.google.android.material.floatingactionbutton.FloatingActionButton>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:id="@+id/createSliderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="90dp"
            android:clickable="true"
            app:elevation="0dp"
            android:src="@drawable/ic_baseline_library_music_24"
            app:backgroundTint="#FFFFFF"
            >

        </com.google.android.material.floatingactionbutton.FloatingActionButton>




    </RelativeLayout>


    <LinearLayout

        android:visibility="visible"

        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_navbar"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"


        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/photosLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/round_photos"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/photos_img"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_baseline_photo"
                app:tint="@color/photos"/>

            <TextView
                android:id="@+id/photos_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Photos"
                android:textColor="@color/photos"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:id="@+id/albumsLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/albums_img"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_baseline_photo_library" />

            <TextView
                android:id="@+id/albums_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Albums"
                android:textColor="@color/albums"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:id="@+id/settingsLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/settings_img"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_baseline_settings" />

            <TextView
                android:id="@+id/settings_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Settings"
                android:textColor="@color/settings"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>

