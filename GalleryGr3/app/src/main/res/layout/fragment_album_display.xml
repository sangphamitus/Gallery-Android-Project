<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlbumDisplayFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/album_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/photos_20"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageButton
                android:id="@+id/album_display_back"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_marginRight="0dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:text="back">

            </ImageButton>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/album_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elegantTextHeight="true"
                    android:text="Album Name"
                    android:textAlignment="center"
                    android:textColor="@color/photos"
                    android:textFontWeight="@integer/material_motion_duration_medium_1"
                    android:textSize="25sp">

                </TextView>

                <TextView
                    android:id="@+id/album_images_count3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center|start|end"
                    android:text="@string/album_image_count"
                    android:textColor="@android:color/primary_text_light_nodisable" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/resizeBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/menu" />

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/album_display_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/album_display_list"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:foregroundGravity="center">-->

<!--        </androidx.recyclerview.widget.RecyclerView>-->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="6dp"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="10dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:clickable="true"
                android:contentDescription="Expand"
                android:src="@android:drawable/ic_menu_add"
                app:backgroundTint="#DAE5D0"
                app:elevation="0dp" />
        </LinearLayout>

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>