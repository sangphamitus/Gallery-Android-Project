<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlbumDisplayFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:stretchColumns="1"
            android:background="@color/photos_20"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TableRow>

                <ImageButton
                    android:id="@+id/album_display_back"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="0dp"
                    android:background="@null"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:text="back">

                </ImageButton>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/album_display_name"
                    android:text=""
                    android:textSize="25dp"
                    android:textFontWeight="@integer/material_motion_duration_medium_1"
                    android:textColor="@color/photos"
                    android:elegantTextHeight="true"
                    android:textAlignment="center">

                </TextView>


            </TableRow>
        </TableLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/album_display_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="10dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:clickable="true"
                android:contentDescription="Expand"
                android:src="@android:drawable/ic_menu_add"
                app:backgroundTint="#DAE5D0"
                app:elevation="0dp" />
        </LinearLayout>

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>