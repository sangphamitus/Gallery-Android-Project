<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/dBackground"
    >

    <GridView
        android:id="@+id/image_choosing_imageList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/image_choosing_buttons"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:horizontalSpacing="4dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="4dp">

    </GridView>

    <TableLayout
        android:theme="@style/customBackgroundSecond"
        android:id="@+id/image_choosing_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:stretchColumns="0,1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/image_choosing_cancel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:theme="@style/dSelectedBtn"
                android:padding="2dp"
                android:src="@drawable/ic_baseline_close_24" />



            <ImageButton
                android:theme="@style/dSelectedBtn"
                android:id="@+id/image_choosing_add"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="2dp"
                android:src="@drawable/ic_baseline_check_24" />
        </TableRow>

    </TableLayout>
</RelativeLayout>