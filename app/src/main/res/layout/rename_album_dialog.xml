<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/custom_dialog"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rename Album"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:text="Album's  name: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/old_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:minWidth="400dp"
        android:minHeight="48dp"
        android:text="Old Album's Name"
        android:textColor="@color/imageBtn" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:text="New Album's  name: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/rename_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="New Album's Name"
        android:inputType="textPersonName"
        android:minWidth="400dp"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/rename_album_cancel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_line"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_marginRight="30dp"
            />

        <ImageButton
            android:id="@+id/rename_alubum_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_line"
            android:src="@drawable/ic_baseline_check_24" />
    </LinearLayout>

</LinearLayout>